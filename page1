<body>

    <div class="container">
        <h1>‚ö° Multiplication Master</h1>
        
        <div class="score-board">
            <span>Score: <span id="score">0</span></span>
            <span>Streak: üî• <span id="streak">0</span></span>
        </div>

        <div class="math-problem">
            <div id="top-number">00</div>
            <div><span class="operator">&times;</span> <span id="bottom-number">0</span></div>
            <div class="line"></div>
        </div>

        <div>
            <input type="number" id="answer-input" placeholder="?" autocomplete="off">
        </div>

        <div class="btn-container">
            <button class="btn-submit" onclick="checkAnswer()">Check Answer</button>
            <button class="btn-skip" onclick="newProblem()">Skip</button>
        </div>

        <div id="feedback" class="message">Good luck!</div>
    </div>

    <script>
        // --- JAVASCRIPT LOGIC ---

        let currentTop = 0;
        let currentBottom = 0;
        let score = 0;
        let streak = 0;

        // Initialize the game
        document.addEventListener('DOMContentLoaded', () => {
            newProblem();
            
            // Allow pressing "Enter" key to submit
            document.getElementById("answer-input").addEventListener("keypress", function(event) {
                if (event.key === "Enter") {
                    checkAnswer();
                }
            });
        });

        function generateRandomNumber(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        function newProblem() {
            // Generate 2-digit number (10 to 99)
            currentTop = generateRandomNumber(10, 99);
            
            // Generate 1-digit number (2 to 9) - we exclude 0 and 1 as they are too easy
            currentBottom = generateRandomNumber(2, 9);

            // Update UI
            document.getElementById('top-number').textContent = currentTop;
            document.getElementById('bottom-number').textContent = currentBottom;
            document.getElementById('answer-input').value = '';
            document.getElementById('answer-input').focus();
            document.getElementById('feedback').textContent = "What is the answer?";
            document.getElementById('feedback').className = "message";
        }

        function checkAnswer() {
            const input = document.getElementById('answer-input');
            const feedback = document.getElementById('feedback');
            const userAns = parseInt(input.value);
            const correctAns = currentTop * currentBottom;

            if (input.value === '') {
                feedback.textContent = "Please type a number first! üî¢";
                feedback.className = "message wrong";
                return;
            }

            if (userAns === correctAns) {
                // Correct Answer
                score += 10;
                streak++;
                feedback.innerHTML = "‚úÖ <b>Correct!</b> Great job!";
                feedback.className = "message correct animate-pop";
                
                // Update stats
                updateStats();
                
                // Wait a moment then generate new problem
                setTimeout(newProblem, 1500);
            } else {
                // Wrong Answer
                streak = 0;
                feedback.innerHTML = "‚ùå Oops! Try again.";
                feedback.className = "message wrong animate-pop";
                updateStats();
                input.select(); // Select text so they can easily type over it
            }
        }

        function updateStats() {
            document.getElementById('score').textContent = score;
            document.getElementById('streak').textContent = streak;
        }
    </script>
</body>
