<script>
    /* --- JAVASCRIPT LOGIC --- */

    // Animation Logic
    let isRectangle = false;
    
    function toggleAnimation() {
        const triangle = document.getElementById('moving-triangle');
        const text = document.getElementById('anim-text');
        const btn = document.querySelector('.action-btn');

        if (!isRectangle) {
            // Move triangle to the right (200px is the width of the rectangle part)
            triangle.style.transform = "translateX(200px)";
            text.innerHTML = "Now it is a <b>RECTANGLE</b>! The area is still Base √ó Height.";
            btn.textContent = "üîÑ Reset Shape";
            isRectangle = true;
        } else {
            // Move triangle back to start
            triangle.style.transform = "translateX(0px)";
            text.innerHTML = "It looks like a parallelogram.";
            btn.textContent = "‚úÇÔ∏è Cut & Move Triangle!";
            isRectangle = false;
        }
    }

    // Quiz Logic
    function checkAnswer(qNum, correctAnswer) {
        const input = document.getElementById('q' + qNum);
        const feedback = document.getElementById('fb' + qNum);
        const userVal = parseInt(input.value);

        if (userVal === correctAnswer) {
            feedback.textContent = "‚úÖ Correct! Well done!";
            feedback.className = "feedback correct";
        } else {
            feedback.textContent = "‚ùå Try again.";
            feedback.className = "feedback incorrect";
        }
    }
</script>

